    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
          <div class="row">
            <!-- Recent Sales -->
            <div class="col-12">
              <div class="card recent-sales overflow-auto">



                <div class="card-body">
                  <h5 class="card-title">Reported Status - Technical </h5>

                  <table class="table table-borderless datatable">
                    <thead>
                      <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Construction</th>
                        <th scope="col">Asset</th>
                        <th scope="col">Note</th>
                        <th scope="col">Suggest</th>
                        <th scope="col">Test day</th>
                        <th scope="col">Time</th>
                        <th scope="col">Technical</th>
                        <th scope="col">Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (reports) { %>
                      <% reports.forEach(function(report, index){ %>
                      <tr data-index="<%= index %>">
                        <td><%= report.id %></td>
                        <td><%= report.construction_name %></td>
                        <td><%= report.asset_name %></td>
                        <td><%= report.note %></td>
                        <td><%= report.suggest %></td>
                        <td><%= report.test_day %></td>
                        <td><%= report.time %></td>
                        <td><%= report.technical_name %></td>
                        <td>
                          <select class="status-select" onchange="updateStatusForRow(this)">
                            <option value="0" class="badge" <%= report.status === 0 ? 'selected' : '' %>>select</option>
                            <option value="1" class="badge bg-success" <%= report.status === 1 ? 'selected' : '' %>>Approved</option>
                            <option value="2" class="badge bg-warning" <%= report.status === 2 ? 'selected' : '' %>>Pending</option>
                            <option value="3" class="badge bg-danger" <%= report.status === 3 ? 'selected' : '' %>>Rejected</option>
                          </select>
                        </td>
                      </tr>
                      <% }) %>
                      <% } %>
                    </tbody>
                  </table>

                  <script>
                    // Lấy tất cả các phần tử select với class "status-select"
                    const selectOptions = document.querySelectorAll('.status-select');

                    // Tạo một đối tượng lưu trạng thái cho từng dòng
                    const statusMap = {};

                    // Xử lý sự kiện change cho mỗi phần tử select
                    selectOptions.forEach((selectOption) => {
                      selectOption.addEventListener('change', function () {
                        // Lấy option được chọn
                        const selectedOption = selectOption.options[selectOption.selectedIndex];

                        // Lấy parent tr (dòng) của phần tử select
                        const parentTr = selectOption.closest('tr');

                        // Lấy index của dòng hiện tại
                        const index = parseInt(parentTr.getAttribute('data-index'));

                        // Lưu trạng thái của phần tử select trong đối tượng statusMap
                        statusMap[index] = selectedOption.className;

                        // Gọi hàm để cập nhật trạng thái cho từng dòng
                        updateStatusForRow(parentTr);
                      });
                    });

                    // Hàm để cập nhật trạng thái cho từng dòng
                    function updateStatusForRow(row) {
                      // Lấy index của dòng từ thuộc tính "data-index"
                      const index = parseInt(row.getAttribute('data-index'));

                      // Lấy td thứ 9 (cột 9) trong dòng hiện tại và thiết lập class cho nó
                      const td = row.querySelector('td:nth-child(3)');
                      td.className = statusMap[index];
                    }
                  </script>

